<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CreateNewAccountPage">

    <TextView
        android:id="@+id/CreateNewUserPage"
        android:layout_width="335dp"
        android:layout_height="134dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="560dp"
        android:text="@string/create_new_accunt_T_CreateNewAccountPage"
        android:textColor="@color/purple_500"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EnterGmailAddress_CreateNewUserPage"
            android:layout_width="322dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="535dp"
            android:ems="10"
            android:hint="@string/gmail_CreateNewAccountPage"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.555"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EnterDisplayName_CreateNewUserPage"
            android:layout_width="322dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="535dp"
            android:ems="10"
            android:hint="@string/display_name_CreateNewAccoutPage"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.555"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555"
        app:startIconDrawable="@drawable/lock_24"
        app:startIconTint="@color/white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/CreatePassword_CreateNewUserPage"
            android:layout_width="322dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="535dp"
            android:ems="10"
            android:hint="@string/password_CreateNewAccountPage"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.555"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555"
        app:startIconDrawable="@drawable/lock_24"
        app:startIconTint="@color/white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/VerifyPassword_CreateNewUserPage"
            android:layout_width="322dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="535dp"
            android:ems="10"
            android:hint="@string/verify_password_CreateNewAccountPage"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.555"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/CreateUser_CreateNewUserPage"
        android:layout_width="300dp"
        android:layout_height="83dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="127dp"
        android:text="@string/create_CreateNewAccountPage"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false"/>


    <ImageView
        android:id="@+id/Back_CreateNewUserPage"
        android:layout_width="80dp"
        android:layout_height="66dp"
        android:layout_marginStart="322dp"
        android:layout_marginTop="648dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/big_blue_purple_button" />

    <CheckBox
        android:id="@+id/RememberMe_CreateNewUserPage"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="645dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="13dp"
        android:text="@string/remember_me_LoginPage"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>